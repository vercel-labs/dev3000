{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build",
  "outputDirectory": ".next",
  "devCommand": "pnpm dev",
  "installCommand": "cd .. && pnpm install",
  "framework": "nextjs",
  "env": {
    "LOG_FILE_PATH": "/tmp/d3k/logs",
    "SCREENSHOT_DIR": "/tmp/d3k/screenshots"
  },
  "functions": {
    "app/api/**/*.ts": {
      "memory": 3008,
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/mcp/:path*",
      "destination": "/api/mcp/:path*"
    }
  ]
}
