{
  "name": "dev3000",
  "version": "0.0.40",
  "description": "AI-powered development tools with browser monitoring and MCP server integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dev3000": "dist/cli.js"
  },
  "files": [
    "dist/",
    "mcp-server/app/",
    "mcp-server/package.json",
    "mcp-server/pnpm-lock.yaml",
    "mcp-server/tsconfig.json",
    "mcp-server/next.config.ts",
    "mcp-server/next-env.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/src && cp src/loading.html dist/src/",
    "dev": "tsc --watch",
    "test": "vitest run",
    "prepare": "husky",
    "postinstall": "cd mcp-server && pnpm install --frozen-lockfile",
    "release": "./scripts/release.sh",
    "test-canary": "./scripts/test-canary.sh"
  },
  "keywords": [
    "nextjs",
    "ai",
    "development",
    "chrome-devtools-protocol",
    "cdp",
    "mcp",
    "browser-monitoring",
    "debugging",
    "claude"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "mcp-handler": "^1.0.2",
    "ora": "^8.2.0",
    "ws": "^8.18.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.8.7",
    "@types/ws": "^8.5.12",
    "husky": "^9.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vercel-labs/dev3000.git"
  },
  "author": "Lindsey Simon <lindsey@vercel.com>",
  "license": "MIT"
}
