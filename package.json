{
  "name": "dev3000",
  "version": "0.0.166",
  "description": "AI-powered development tools with browser monitoring and skill integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dev3000": "./bin/dev3000",
    "d3k": "./bin/dev3000"
  },
  "files": [
    "bin/",
    "dist/",
    "src/tui-interface-impl.tsx",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/src && cp src/loading.html dist/src/ && cp src/tui-interface-impl.tsx dist/src/ && cp -r src/skills dist/",
    "typegen": "./scripts/typegen.sh",
    "typecheck": "bun run --filter '*' typecheck",
    "format": "biome format --write .",
    "lint": "biome check src www scripts --vcs-use-ignore-file=true",
    "lint:fix": "biome check --write src www scripts",
    "test": "vitest run",
    "test-postinstall": "tsx scripts/test-postinstall.ts",
    "test-global-install": "tsx scripts/test-global-install.ts",
    "test-clean-install": "tsx scripts/test-clean-install.ts",
    "test-release": "./scripts/test-release.sh",
    "canary:smoke": "bun run scripts/canary-smoke-test.ts",
    "_postinstall": "node scripts/check-install.js || exit 0",
    "_prepare": "husky",
    "release": "./scripts/release.sh",
    "canary": "./scripts/canary.sh",
    "build:binaries": "bun run scripts/build-binaries.ts"
  },
  "keywords": [
    "nextjs",
    "ai",
    "development",
    "chrome-devtools-protocol",
    "cdp",
    "browser-monitoring",
    "debugging",
    "claude"
  ],
  "dependencies": {
    "@biomejs/biome": "^2.2.4",
    "@opentui/core": "^0.1.75",
    "@vercel/sandbox": "^1.1.8",
    "agent-browser": "^0.6.0",
    "ai": "^5.0.87",
    "chalk": "^5.3.0",
    "commander": "^14.0.1",
    "ink": "^6.5.1",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ms": "^2.1.3",
    "next": "16.1.0",
    "ora": "^9.0.0",
    "package-manager-detector": "^1.3.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "typescript": "^5.0.0",
    "workflow": "latest",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/ms": "^2.1.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.0.0",
    "@types/ws": "^8.5.12",
    "husky": "^9.0.0",
    "react-devtools-core": "^7.0.1",
    "tsx": "^4.20.3",
    "turbo": "^2.6.0",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@d3k/darwin-arm64": "0.0.166",
    "@d3k/linux-x64": "0.0.166",
    "@d3k/windows-x64": "0.0.166",
    "@opentui/core-linux-x64": "^0.1.71"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vercel-labs/dev3000.git"
  },
  "author": "Lindsey Simon <lindsey@vercel.com>",
  "license": "MIT",
  "packageManager": "bun@1.2.5",
  "workspaces": [
    "www"
  ]
}
