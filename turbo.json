{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "REPO_URL",
    "AI_GATEWAY_API_KEY",
    "CLIENT_SECRET",
    "BLOB_READ_WRITE_TOKEN",
    "LOG_FILE_PATH",
    "SCREENSHOT_DIR"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
