{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "files": {
    "ignoreUnknown": true
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": false
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "quoteStyle": "double"
    }
  },
  "overrides": [
    {
      "includes": ["**/next-env.d.ts"],
      "formatter": {
        "enabled": false
      }
    }
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useMediaCaption": "off",
        "noSvgWithoutTitle": "off",
        "useFocusableInteractive": "warn",
        "useSemanticElements": "warn",
        "useButtonType": "warn",
        "useAriaPropsForRole": "warn"
      },
      "performance": {
        "noImgElement": "warn"
      },
      "correctness": {
        "noUnusedImports": { "level": "on", "fix": "unsafe" },
        "noUnusedVariables": { "level": "on", "fix": "unsafe" },
        "useExhaustiveDependencies": "warn",
        "useUniqueElementIds": "warn",
        "noNestedComponentDefinitions": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noDocumentCookie": "off",
        "noUnknownAtRules": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn",
        "noGlobalEval": "error"
      },
      "style": {
        "useNodejsImportProtocol": "off"
      },
      "complexity": {
        "noImportantStyles": "off"
      }
    }
  }
}
